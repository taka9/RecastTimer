<Window x:Class="RecastTimer.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecastTimer" Height="193" Width="333" ResizeMode="NoResize" Background="Black" WindowStyle="None" Topmost="True">
    <Window.Resources>
        <ResourceDictionary Source="CaptionButtonStyleKey.xaml"/>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{x:Static SystemParameters.CaptionHeight}"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="246,157,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="Ok" HorizontalAlignment="Left" Margin="166,157,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
    </Border>
</Window>
